@page
@model BooksRazor.Pages.BookList.EditModel

<br />
<h2 class="text-primary">Edit Book</h2>
<br />

<div class="border container" style="padding:30px;">
	<form method="post">
		<input type = "hidden" asp-for = "Books.Id"/>
		<div class = "text-danger" asp-validation-summary = "ModelOnly"></div>
		<div class="form-group row ">

			<div class="col-3">
				<label asp-for="Books.Name"></label>
			</div>
			<div class="col-6">
				<input asp-for="Books.Name" class="form-control" />
				<span class = "text-danger" asp-validation-for = "Books.Name"></span>
			</div>
			
		</div>
		
		<div class="form-group row mt-2">

			<div class="col-3">
				<label asp-for="Books.Author"></label>
			</div>
			<div class="col-6">
				<input asp-for="Books.Author" class="form-control" />
				<span class = "text-danger" asp-validation-for = "Books.Author"></span>
			</div>
			
		</div>

		<div class="form-group row mt-2">

			<div class="col-3">
				<label asp-for="Books.ISBN"></label>
			</div>
			<div class="col-6">
				<input asp-for="Books.ISBN" class="form-control" />
				<span class = "text-danger" asp-validation-for = "Books.ISBN"></span>
			</div>
			
			<div class="form-group row mt-2">
			
				<div class="col-3 offset-3">
					<input type="submit" value="Update" class="btn btn-primary form-control" />
				</div>
		         
				<div class="col-3">
					<a asp-page="Index" class="btn btn-success form-control">Back to List</a>
				</div>

			</div>
		</div>

	</form>


</div>

@section Scripts {
	<partial name = "_ValidationScriptsPartial"/>
}
